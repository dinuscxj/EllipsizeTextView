<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:maxLines="1" />

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:maxLines="2" />

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:ellipsize_index="0"
        app:ellipsize_text="***"
        android:maxLines="2" />

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:ellipsize_index="8"
        app:ellipsize_text="***"
        android:maxLines="2" />

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:maxLines="2" />

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:maxLines="2" />


    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize6"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <com.dinuscxj.ellipsize.EllipsizeTextView
        android:id="@+id/tv_ellipsize7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:maxLines="2" />

    <EditText
        android:id="@+id/input_text"
        android:textSize="16sp"
        android:hint="test emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>